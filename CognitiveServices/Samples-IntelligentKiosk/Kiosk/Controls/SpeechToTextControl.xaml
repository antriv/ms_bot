<UserControl
    x:Class="IntelligentKioskSample.Controls.SpeechToTextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentKioskSample.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button Background="#FF222222" BorderBrush="Transparent" >
        <SymbolIcon Margin="6" Symbol="Microphone"></SymbolIcon>
        <Button.Flyout>
            <Flyout Opened="OnSpeechRecognitionFlyoutOpened" Closed="OnSpeechRecognitionFlyoutClosed" Placement="Left">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBox IsTabStop="False" x:Name="speechRecognitionTextBox" TextWrapping="Wrap" Width="300" />
                        <Button Name="speechRecognitionControlButton" Click="SpeechRecognitionButtonClick" VerticalAlignment="Stretch" Margin="6,0,0,0" >
                            <SymbolIcon Name="speechRecognitionControlButtonSymbol" Symbol="Stop"/>
                        </Button>
                    </StackPanel>
                    <local:SentimentControl x:Name="sentimentControl"/>
                </StackPanel>
            </Flyout>
        </Button.Flyout>
    </Button>

</UserControl>
